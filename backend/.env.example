# Server
PORT=8080
FRONTEND_URL=http://localhost:3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/service_platform

# JWT (login)
JWT_SECRET=change-me-in-production
JWT_EXPIRE=7d

# OTP / Email verification
FEATURE_EMAIL_VERIFICATION_ENABLED=true

# Redis (required for OTP and password-reset sessions)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Or: REDIS_URL=redis://localhost:6379/0

# AWS (OTP via SES email + SNS SMS)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# Optional
# OTP_BCRYPT_ROUNDS=10
